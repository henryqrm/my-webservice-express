{
    "version": "0.2.0",
    "configurations": [{
        "name": "launch as server",
        "type": "node2",
        "request": "launch",
        "cwd": "${workspaceRoot}",
        "program": "${workspaceRoot}/dist/index.js",
        "stopOnEntry": false,
        "args": ["--server=4712"],
        "sourceMaps": true,
        "outDir": "${workspaceRoot}/dist"
    }]
}
